<%- include("header") -%>
    <div class="box" id = "heading">
        <h1> <%=listTitle %></h1>
    </div>
    
    <div class="box">
        <% newitems.forEach(items => { %>

            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="Checkbox" value="<%=items.id %>" onchange="this.form.submit()"> 
                <p style="color:black"> <%=items.name %> </p>
            </div>
            <input type="hidden" name="listName" value="<%=listTitle %> "></input>
        </form>
        <% }) %>

        <form class="item" action="/" method="post">
            <input name="add_item" type="text" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value= <%= listTitle %> > + </button>
        </form>

    </div>
    
    
